<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.luongoc.n3_13_androidfitness.Main3CoBung.Main2CoBungHanging">

    <LinearLayout
        android:id="@+id/llAbs3"
        android:layout_alignParentTop="true"
        android:background="#5cc6fa"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <ImageView
            android:src="@drawable/icon_back"
            android:padding="12dp"
            android:id="@+id/imgBackCobung"
            android:layout_width="58dp"
            android:layout_height="58dp"
            />

        <TextView
            android:layout_width="250dp"
            android:layout_height="58dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:text="Bicycle"
            android:textColor="#ffff"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDate"
        android:background="#5cc6fa"
        android:layout_below="@+id/llAbs3"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tvDate"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="DD:MM:YYYY"
            android:textSize="26dp"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/llDate">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/layoutDots"
            android:layout_marginTop="365dp"
            android:alpha=".5"
            android:background="#cfcdcd" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llTimer"
        android:background="#d0dcff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:text="Music"
                android:onClick="play"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:id="@+id/btnMusic"/>
            <Button
                android:id="@+id/btnReset"
                android:text="RESET"
                android:onClick="stop"
                android:layout_width="match_parent"
                android:layout_height="39dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="44dp"
                android:id="@+id/tvTimer"
                android:text="01:30"
                android:textColor="#515151"
                android:textSize="45sp"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <Button
            android:id="@+id/btnStartPause"
            android:text="START"
            android:layout_width="80dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>
